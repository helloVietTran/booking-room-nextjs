{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],// thư viện
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,// cho phép dùng module
    "module": "esnext",
    "moduleResolution": "bundler",// công cụ nối module
    "resolveJsonModule": true,// chp phép tải lên json module
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]//loại trừ biên dịch file này để tăng tốc độ
}
